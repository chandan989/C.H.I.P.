{
  "version": 2,
  "builds": [
    {
      "src": "App/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "Server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Server/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "App/dist/assets/$1"
    },
    {
      "src": "/(.*\\..*)",
      "dest": "App/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "App/dist/index.html"
    }
  ]
}