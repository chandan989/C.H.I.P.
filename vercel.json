{
  "version": 2,
  "builds": [
    {
      "src": "App/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "Server/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Server/server.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/App/dist/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/App/dist/index.html"
    }
  ]
}